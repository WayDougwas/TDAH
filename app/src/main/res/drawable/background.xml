<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Transparente -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <!-- Fundo arredondado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Cor de fundo -->
        </shape>
    </item>
</layer-list>
